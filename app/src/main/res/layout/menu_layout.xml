<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/giz"
    android:orientation="vertical"
    tools:context=".MenuActivity">


    <ImageView
        android:id="@+id/MenuBarrasIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_baseline_menu"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/EdtPesquisaMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edtmenulayout"
            android:hint="Pesquisar"
            android:textColorHint="@color/black"
            android:textSize="18sp"
             />

        <ImageView
            android:id="@+id/ImgPesquisaCardapio"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_baseline_search" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="3dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/IconHouseMenu"
            android:layout_width="65dp"
            android:layout_height="65dp"

            android:src="@drawable/ic_baseline_house" />

        <ImageView
            android:id="@+id/IconMesasMenu"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginHorizontal="30dp"
            android:src="@drawable/ic_mesamenu" />

        <ImageView
            android:id="@+id/IconSettingsMenu"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/ic_baseline_settings" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="440dp"
        android:layout_marginHorizontal="10dp"
        >

        <GridView
            android:id="@+id/GriedViewMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numColumns="2" />
    </FrameLayout>

    <Button
        android:id="@+id/BotaoFinalizarPedidoMenu"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:backgroundTint="#EF2f00"
        android:text="1 Item              R$ 90,00"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        />


</LinearLayout>